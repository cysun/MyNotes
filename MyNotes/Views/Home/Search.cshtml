@{
    ViewData["Title"] = "MyNotes - Search";
}
<div class="row">
    <div class="col-lg-6">
        <h4 class="text-center">Notes</h4>
        @if (ViewBag.Notes.Count == 0)
        {
            <p class="text-center">No notes found.</p>
        }
        else
        {
            <table class="table table-hover">
                <tbody>
                    @foreach (var note in ViewBag.Notes)
                    {
                        <tr>
                            <td>
                                @if (note.IsPublic)
                                {
                                    <i class="fab fa-creative-commons-share text-secondary"></i>
                                }
                                <a asp-controller="Notes" asp-action="View" asp-route-id="@note.Id" class="mr-3">@note.Subject</a>
                                @foreach (var noteTag in note.NoteTags)
                                {
                                    <a asp-controller="Notes" asp-action="Index" asp-route-term="tag:@noteTag.Label"
                                       class="badge badge-success">@noteTag.Label</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="col-lg-6">
        <h4 class="text-center">Files</h4>
        @if (ViewBag.Files.Count == 0)
        {
            <p class="text-center">No files found.</p>
        }
        else
        {
            <table class="table table-hover">
                <tbody>
                    @foreach (var file in ViewBag.Files)
                    {
                        var icon = file.IsPublic ? "far" : "fas";
                        <tr>
                            @if (file.IsFolder)
                            {

                                <td>
                                    <i class="folder @icon fa-folder-open mr-2" style="color: orange;" data-file-id="@file.Id"></i>
                                    <a asp-controller="Folders" asp-action="View" asp-route-id="@file.Id">@file.Name</a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <i class="file @icon fa-file mr-2" style="color: orange;" data-file-id="@file.Id"></i>
                                    <a asp-controller="Files" asp-action="View" asp-route-id="@file.Id">@file.Name</a>
                                    @if (file.Version > 1)
                                    {
                                        <span class="badge badge-info ml-2">v@(file.Version)</span>
                                    }
                                </td>
                            }
                            <td>
                                @if (!file.IsFolder)
                                {
                                    <a asp-controller="Files" asp-action="Download" asp-route-id="@file.Id"
                                       class="btn btn-primary btn-sm py-0 ml-2">
                                        <i class="fas fa-download"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts{
    <script>
    $(function () {
        $("#searchAll").val("@Context.Request.Query["term"]");
    });
    </script>
}
