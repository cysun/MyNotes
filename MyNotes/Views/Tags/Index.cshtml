@model List<Tag>
@{
    ViewData["Title"] = "MyNotes - Tags";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item active align-bottom">Tags</li>
        <li class="ml-auto">
            <a asp-action="Create" class="btn btn-primary btn-sm py-0">
                <i class="fas fa-plus"></i>
            </a>
        </li>
    </ol>
</nav>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Label</th>
            <th>Note Count</th>
            <th class="d-none d-md-table-cell">Last Used</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tagRecord in Model)
        {
            <tr>
                <td>@tagRecord.Label</td>
                <td>
                    <a asp-controller="Notes" asp-action="Index" asp-route-term="tag:@tagRecord.Label">
                        @tagRecord.NoteCount
                    </a>
                </td>
                <td class="d-none d-md-table-cell">@tagRecord.LastUsed.ToString("d")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@tagRecord.Id" class="btn btn-danger btn-sm py-0">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
