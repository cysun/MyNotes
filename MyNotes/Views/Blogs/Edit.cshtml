@model NoteInputModel
@{
    ViewData["Title"] = $"MyNotes - Edit Blog Summary";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Notes" asp-action="Index">Notes</a></li>
        <li class="breadcrumb-item"><a asp-controller="Notes" asp-action="View" asp-route-id="@Model.Id">@Model.Subject</a></li>
        <li class="breadcrumb-item active">Edit Blog Summary</li>
    </ol>
</nav>

<form method="post">
    <div class="mb-3">
        <textarea id="summary" name="summary" class="form-control">@Model.Summary</textarea>
    </div>
    <a asp-controller="Notes" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary ms-2">Save</button>
</form>

@section StyleSheets{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-bs5.min.css"
      integrity="sha512-ngQ4IGzHQ3s/Hh8kMyG4FC74wzitukRMIcTOoKT3EyzFZCILOPF0twiXOQn75eDINUfKBYmzYn2AA8DkAk8veQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />
}
    @section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-bs5.min.js"
        integrity="sha512-6F1RVfnxCprKJmfulcxxym1Dar5FsT/V2jiEUvABiaEiFWoQ8yHvqRM/Slf0qJKiwin6IDQucjXuolCfCKnaJQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        $(function() {
            $("#summary").summernote({
                height: 200,
                toolbar: [
                    ['font', ['bold', 'italic', 'underline', 'link']],
                ]
            });
        });
    </script>
}
