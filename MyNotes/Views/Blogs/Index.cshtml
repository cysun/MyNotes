@model List<Note>
@{
    ViewData["Title"] = "MyNotes - Blogs";
}
@if (Model.Count == 0)
{
    <p>No blog yet.</p>
}
<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var blog in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5>@blog.Subject</h5>
                    @Html.Raw(@blog.Summary)
                    <a asp-action="View" asp-route-id="@blog.Id" class="btn btn-primary">View</a>
                </div>
                <div class="card-footer text-end text-muted">
                    <smaller>@blog.Published?.ToString("d")</smaller>
                </div>
            </div>
        </div>
    }
</div>
