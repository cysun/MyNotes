@model List<Note>
@{
    ViewData["Title"] = "MyNotes - Blogs";
}
@if (Model.Count == 0)
{
    <p>No blog yet.</p>
}
<div class="row">
    @foreach (var blog in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5>@blog.Subject</h5>
                    @Html.Raw(@blog.Summary)
                    <a asp-action="View" asp-route-id="@blog.Id" class="btn btn-primary">View</a>
                </div>
                <div class="card-footer text-right text-muted">
                    @foreach (var noteTag in blog.NoteTags)
                    {
                        <span class="badge badge-success">@noteTag.Label</span>
                    }
                    <smaller>@blog.Published?.ToString("d")</smaller>
                </div>
            </div>
        </div>
    }
</div>
